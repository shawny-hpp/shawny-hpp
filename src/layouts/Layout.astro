---

interface Props {
	title?: string;
  description?: string;
  keywords?: string;
}

const { title = "Shawny", description = "", keywords = "" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <meta name="keywords" content=`Shawny, shawny-x3, shawny dev, shawny pony, shawny mlp, ${keywords}` />
    <meta name="author" content="Shawny" />
    <meta name="description" content={description}>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta property="og:image" content=`${Astro.site}shawny.png` />
    <slot name="header"/>
		<title>{title}</title>
	</head>
	<body>
    <slot />
	</body>
</html>

<style lang="scss" is:global>
  @import "../scss/styles";
</style>
